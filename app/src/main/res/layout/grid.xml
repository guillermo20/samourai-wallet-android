<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinBG"
    >

    <LinearLayout
        android:id="@+id/prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cancel"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_24sp"
            android:text="@string/create_new_wallet"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="2"/>

        <!--TextView
            android:id="@+id/prompt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="#FFffffff"
            android:background="#FF212429"
            android:gravity="center_horizontal"
            android:textAlignment="gravity"
            android:text="@string/pin_enter"
            /-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/prompt"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/prompt2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pin_text"
            android:textSize="@dimen/text_size_20sp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"/>

        <TextView
            android:id="@+id/userInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#FFffffff"
            android:background="#272c33"
            android:gravity="center_horizontal"
            android:textAlignment="gravity"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

    </LinearLayout>

    <GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:layout_centerInParent="true"
    android:layout_below="@id/inputLayout"
    >

    <Button android:id="@+id/ta" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="0"
        android:layout_column="0" />
    <Button android:id="@+id/tb" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="0"
        android:layout_column="1" />
    <Button android:id="@+id/tc" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="0"
        android:layout_column="2" />
    <Button android:id="@+id/td" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="1"
        android:layout_column="0" />
    <Button android:id="@+id/te" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="1"
        android:layout_column="1" />
    <Button android:id="@+id/tf" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="1"
        android:layout_column="2" />
    <Button android:id="@+id/tg" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="2"
        android:layout_column="0" />
    <Button android:id="@+id/th" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="2"
        android:layout_column="1" />
    <Button android:id="@+id/ti" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
        android:layout_row="2"
        android:layout_column="2" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/tback"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_backspace_white_24dp"
            android:background="@color/pinBG" />

        <Button android:id="@+id/tj" android:textSize="30dp" android:textColor="@color/primary_light" android:background="@drawable/rounded_rectangle_black" android:layout_height="50dp" android:layout_width="70dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:typeface="sans"
            android:layout_row="3"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/tsend"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/rounded_rectangle_green"
            android:src="@drawable/ic_done_white_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

    </GridLayout>

</RelativeLayout>
